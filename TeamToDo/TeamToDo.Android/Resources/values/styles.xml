<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@drawable/app_screen</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <item name="android:actionMenuTextColor">#dd352e</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->

    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#e7eced</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <!-- http://mcg.mbitson.com/#!?mcgpalette0=%23d7dfe0 -->
    <item name="colorPrimaryDark">#BECACB</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#28384c</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>


  <style name="SplashTheme.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="SplashTheme" parent="SplashTheme.Base">
  </style>

  <style name="SplashTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="AppToolbarTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:colorBackground">#000000</item>
    <item name="android:textColor">#28384c</item>
  </style>
</resources>
